<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="/struts-tags" prefix="s"%>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<!-- saved from url=(0038)http://localhost/bbs/Admin/setting.asp -->
<HTML>
	<HEAD>
		<TITLE>管理页面</TITLE>
		<META http-equiv=content-type content="text/html; charset=gbk">
		<LINK href="../images/main.css" type=text/css rel=stylesheet>


		<SCRIPT language=javascript type=text/javascript>var boardxml='';var ISAPI_ReWrite=0;</SCRIPT>

		<META content="MSHTML 6.00.2900.3268" name="GENERATOR">
	</HEAD>
	<BODY>
<s:form action="/saveBrand" method="post">
	<table cellspacing="1" cellpadding="3" width="350" align="left"
			border="0">
			<tr>
				<th colspan="3" class="td_title" style="TEXT-ALIGN: center">
					<span class="td_title" style="TEXT-ALIGN: center">添加品牌</span>
				</th>
			</tr>
			<tr class="td2">
				<td align="center" class="STYLE6">
					<strong>
						品牌名称
					</strong>
				</td>
				<td align="center" class="STYLE6">
					<s:textfield name="brandInfo.name" size="40"></s:textfield>
				</td>
			</tr>
			<tr class="td2">
				<td align="center" class="STYLE6" colspan="2">
					<strong>
						<input type="button" value="提交" onclick="createBrand();" />
					</strong>
				</td>
			</tr>			
		</table>
		<script type="text/javascript" language="javascript">
			function createBrand(){
				document.forms[0].submit();				
				window.opener.location.reload();
				window.close();
			}
		</script>		
</s:form>
</BODY>
</HTML>